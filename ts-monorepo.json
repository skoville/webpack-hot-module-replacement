                    ],
                    "devDependencies": [
                        "@types/node"
                    ]
                },
                "tsconfig.json": {
                    "compilerOptions": {
                        "types":["node"]
                    }
                }
            }
        },
        "@skoville/webpack-hmr-web-abstract-client": {
            "publishDistributionFolder": false,
            "configs": {
                "package.json": {
                    "files":["distribution"],
