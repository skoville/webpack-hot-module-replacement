                    "dependencies": [
                        "@skoville/webpack-hmr-core",
                        "ansicolor"
                    ]
                },
                "tsconfig.json": {
                    "compilerOptions":{
                        "lib": ["dom"]
                    }
                }
            }
        },
        "@skoville/webpack-hmr-web-default-client": {
            "publishDistributionFolder": false,
            "configs": {
                "package.json": {
                    "dependencies":[
                        "@skoville/webpack-hmr-web-abstract-client",
                        "@skoville/webpack-hmr-universal-socketio-client-remote-accessor-module"
