            }
        },
        "@skoville/webpack-hmr-node-abstract-client": {
            "publishDistributionFolder": false,
            "configs": {
                "package.json": {
                    "files":["distribution"],
                    "main": "./distribution/package.js",
                    "dependencies": [
                        "@skoville/webpack-hmr-node-client-application-restarter-module-data-transfer-object",
                        "@skoville/webpack-hmr-core"
                    ],
                    "devDependencies": [
                        "@types/node"
                    ]
                },
                "tsconfig.json": {
                    "compilerOptions": {
                        "types":["node"]
                    }
                }
            }
        },
        "@skoville/webpack-hmr-node-default-client": {
            "publishDistributionFolder": false,
            "configs": {
                "package.json": {
                    "dependencies":[
