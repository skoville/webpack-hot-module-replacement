{
    "packageRoot": "packages",
    "baseConfigs": {
        "tsconfig.json": {
            "compilerOptions": {
                "module": "commonjs",
                "target": "es6",
                "lib": ["esnext"],
                "types": [],
                "forceConsistentCasingInFileNames": true,
                "noImplicitReturns": true,
                "noUnusedLocals": true,
                "noUnusedParameters": true,
                "strict": true,
                "stripInternal": true,
                "rootDir": "./source",
                "outDir": "./distribution"
            }
        },
        "package.json": {
            "author": "Alexander Leung",
            "license": "MIT",
            "repository": {
                "type": "git",
                "url": "git+https://github.com/skoville/webpack-hot-module-replacement.git"
            }
        }
    },
    "packages": {
        "@isomorphic-typescript/modularly-architected-library-foundation": {
            "publishDistributionFolder": false,
            "configs": {
                "package.json": {
                    "files": ["distribution"],
                    "main": "./distribution/package.js",
                    "description": "Provides the foundation to build a library or application with a modular architecture. Easily swappable implementations with a clear interface."
                },
                "tsconfig.json": {}
            }
        },
        "@skoville/webpack": {
            "publishDistributionFolder": true,
            "configs": {
                "package.json": {
                    "description": "Skoville webpack core.",
                    "dependencies": [
                        "@types/webpack-env",
                        "@isomorphic-typescript/modularly-architected-library-foundation",
                        "ansicolor"
                    ]
                },
                "tsconfig.json": {
                    "compilerOptions": {
                        "types": ["webpack-env"]
                    }
                }
            }
        },
        "@skoville/webpack-hmr-core-shared": {
            "publishDistributionFolder": false,
            "configs": {
                "package.json": {
                    "description": "Skoville webpack core.",
                    "files": ["distribution"],
                    "main": "./distribution/package.js",
                    "dependencies": [
                        "@isomorphic-typescript/modularly-architected-library-foundation",
                        "ansicolor"
                    ]
                },
                "tsconfig.json": {}
            }
        }
    },
    "version": "0.0.0"
}