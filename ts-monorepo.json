{
    "packageRoot": "packages",
    "baseConfigs": {
        "tsconfig.json": {
            "compilerOptions": {
                "module": "commonjs",
                "target": "es6",
                "lib": ["esnext"],
                "types": ["ts-nameof"],
                "forceConsistentCasingInFileNames": true,
                "noImplicitReturns": true,
                "noUnusedLocals": true,
                "noUnusedParameters": true,
                "strict": true,
                "stripInternal": true,
                "rootDir": "./source",
                "outDir": "./distribution"
            }
        },
        "package.json": {
            "author": "Alexander Leung",
            "license": "MIT",
            "repository": {
                "type": "git",
                "url": "git+https://github.com/skoville/webpack-hot-module-replacement.git"
            },
            "devDependencies":[
                "ts-nameof"
            ]
        }
    },
    "packages": {
        "@isomorphic-typescript/modularly-architected-library-foundation": {
            "publishDistributionFolder": false,
            "configs": {
                "package.json": {
                    "files": ["distribution"],
                    "main": "./distribution/package.js",
                    "description": "Provides the foundation to build a library or application with a modular architecture. Easily swappable implementations with a clear interface."
                },
                "tsconfig.json": {}
            }
        },
        "@isomorphic-typescript/fs-async-nodejs": {
            "publishDistributionFolder": false,
            "configs": {
                "package.json":{
                    "files": ["distribution"],
                    "main": "./distribution/package.js",
                    "dependencies": [
                        "@types/node"
                    ]
                },
                "tsconfig.json":{
                    "compilerOptions": {
                        "types": ["node"]
                    }
                }
            }
        },
        "@skoville/webpack-hmr-core": {
            "publishDistributionFolder": true,
            "configs": {
                "package.json": {
                    "description": "Skoville hmr webpack core!",
                    "dependencies": [
                        "@types/webpack-env",
                        "@isomorphic-typescript/modularly-architected-library-foundation",
                        "ansicolor"
                    ]
                },
                "tsconfig.json": {
                    "compilerOptions": {
                        "types": ["webpack-env"]
                    }
                }
            }
        },
        "@skoville/webpack-hmr-node-abstract-server": {
            "publishDistributionFolder": false,
            "configs": {
                "package.json": {
                    "files": ["distribution"],
                    "main": "./distribution/package.js",
                    "dependencies":[
                        "@skoville/webpack-hmr-core",
                        "@isomorphic-typescript/modularly-architected-library-foundation",
                        "memory-fs",
                        "uuid",
                        "webpack",
                        "ansicolor"
                    ],
                    "devDependencies": [
                        "@types/node",
                        "@types/uuid",
                        "@types/webpack-env",
                        "@types/webpack",
                        "@types/memory-fs"
                    ]
                },
                "tsconfig.json": {
                    "compilerOptions": {
                        "types":["node", "webpack-env"]
                    }
                }
            }
        },
        "@skoville/webpack-hmr-node-default-server": {
            "publishDistributionFolder": false,
            "configs": {
                "package.json": {
                    "dependencies":[
                        "ansicolor",
                        "@skoville/webpack-hmr-core",
                        "@skoville/webpack-hmr-node-abstract-server",
                        "express",
                        "mime",
                        "socket.io"
                    ],
                    "devDependencies": [
                        "@types/node",
                        "@types/mime",
                        "@types/express",
                        "@types/socket.io"
                    ]
                },
                "tsconfig.json": {
                    "compilerOptions": {
                        "types":["node"]
                    }
                }
            }
        },
        "@skoville/webpack-hmr-universal-socketio-client-remote-accessor-module": {
            "publishDistributionFolder": false,
            "configs": {
                "package.json": {
                    "files": ["distribution"],
                    "main": "./distribution/package.js",
                    "dependencies": [
                        "@skoville/webpack-hmr-core",
                        "socket.io-client"
                    ],
                    "devDependencies": [
                        "@types/socket.io-client"
                    ]
                },
                "tsconfig.json": {}
            }
        },
        "@skoville/webpack-hmr-node-client-cli": {
            "publishDistributionFolder": false,
            "configs": {
                "package.json":{
                    "files":["distribution"],
                    "bin": {
                        "skoville-webpack-node-run": "./distribution/cli.js"
                    },
                    "dependencies": [
                        "@isomorphic-typescript/fs-async-nodejs",
                        "@skoville/webpack-hmr-core",
                        "@skoville/webpack-hmr-node-client-application-restarter-module-data-transfer-object",
                        "yargs"
                    ],
                    "devDependencies": [
                        "@types/yargs",
                        "@types/node"
                    ]
                },
                "tsconfig.json":{
                    "compilerOptions": {
                        "types": ["node"]
                    }
                }
            }
        },
        "@skoville/webpack-hmr-node-client-application-restarter-module-data-transfer-object": {
            "publishDistributionFolder": false,
            "configs": {
                "package.json": {
